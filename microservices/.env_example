# Microservices Alarm System Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_DB=alarms_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL for services (constructed from above)
DATABASE_URL=postgresql://admin:your_secure_password_here@postgres:5432/alarms_db

# Database Connection Pool Settings
MAX_DB_CONNECTIONS=20
MIN_DB_CONNECTIONS=5

# =============================================================================
# REDIS CONFIGURATION  
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# SERVICE ENDPOINTS
# =============================================================================

# Internal service URLs (for inter-service communication)
DATABASE_SERVICE_URL=http://database-service:8001
ALARM_SCHEDULER_URL=http://alarm-scheduler:8002
DESCRIPTION_API_URL=http://database-service:8001/code-descriptions

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Service Settings
SIMULATION_MODE=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Timezone Settings
TIMEZONE=America/Los_Angeles

# Service Ports (for external access)
API_GATEWAY_PORT=8000
DATABASE_SERVICE_PORT=8001
ALARM_SCHEDULER_PORT=8002
ALARM_PROCESSOR_PORT=8003
EMAIL_SERVICE_PORT=8004

# Load Balancer
NGINX_PORT=80

# =============================================================================
# SCALABILITY SETTINGS (for production)
# =============================================================================

# PostgreSQL Performance Tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_CHECKPOINT_SEGMENTS=32
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9